        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:id="@+id/bt_2"
        android:text="Toast.d"
        android:textAllCaps="false" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Toast.w"
        android:id="@+id/bt_3"
        android:textAllCaps="false" />

    <Button
        android:layout_width="match_parent"
